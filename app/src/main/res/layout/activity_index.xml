<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".index">

    <Button
            android:text="QR"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnQr"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnVehiculos"/>
    <Button
            android:text="Vehiculos "
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnVehiculos"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/editAdeudo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Metodos de pago"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnMetodos"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btnQr"/>
    <TextView
            android:text="Marca"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/textMarca" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Modelo"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/textModelo" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textMarca" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Año"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAño" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textModelo" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Adeudo"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/textAdeudo" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textAño" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="130dp"
            android:layout_height="22dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editMarca"
            app:layout_constraintStart_toEndOf="@+id/textMarca" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.436"/>
    <EditText
            android:layout_width="130dp"
            android:layout_height="22dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editModelo"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editMarca" app:layout_constraintStart_toEndOf="@+id/textModelo"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.436"/>
    <EditText
            android:layout_width="130dp"
            android:layout_height="22dp"
            android:ems="10"
            android:id="@+id/editAño"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editModelo"
            app:layout_constraintStart_toEndOf="@+id/textAño" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.436"
            android:inputType="numberSigned"/>
    <EditText
            android:layout_width="130dp"
            android:layout_height="22dp"
            android:ems="10"
            android:id="@+id/editAdeudo"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:inputType="numberSigned" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editAño" app:layout_constraintStart_toEndOf="@+id/textAdeudo"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.436"/>
</android.support.constraint.ConstraintLayout>